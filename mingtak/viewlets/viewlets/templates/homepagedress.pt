<tal:registry define="registry python:context.portal_registry['mingtak.viewlets.promotionsetting.IPromotionSetting.dress'];
                      catalog python:context.portal_catalog">

<div class="headline dress">
<h1>Dress</h1>
</div>

            <ul class="portfolio-strip fixed">

      <tal:repeat repeat="contentId registry/split">
        <tal:getItem define="item python:catalog(id=contentId)[0]">

            	<li>
                    <div class="portfolio-item">
                        <div class="portfolio-item-preview">			
                            <img tal:attributes="src item/imageUrl; alt item/Title">                            
                            <div class="portfolio-item-overlay">
                                <div class="portfolio-item-overlay-actions">
                                    <a class="magnificPopup-gallery portfolio-item-zoom" tal:attributes="href item/imageUrl">
                                        <i class="ifc-zoom_in"></i>
                                    </a>
                                    <a class="portfolio-item-link" tal:attributes="href item/getURL">
                                        <i class="ifc-link"></i>
                                    </a>
                                </div><!-- end .portfolio-item-overlay-actions -->
                            </div><!-- end .portfolio-item-overlay -->
                        </div><!-- end .portfolio-item-preview -->
                        <div class="portfolio-item-description">
                            <h3 tal:content="item/Title">Lorem ipsum dolor</h3>
                        </div><!-- end .portfolio-item-description -->
                    </div><!-- end .portfolio-item -->
                </li>
        </tal:getItem>
      </tal:repeat>
            </ul><!-- end .portfolio-strip -->
</tal:registry>
